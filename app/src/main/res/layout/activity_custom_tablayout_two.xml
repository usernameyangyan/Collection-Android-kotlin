<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent">


	<com.youngmanster.collection_kotlin.base.customview.tablayout.CommonTabLayout
		android:id="@+id/customTabView"
		app:tab_c_tabTextColor="@color/black"
		app:tab_c_tabSelectedTextColor="@color/colorPrimary"
		app:tab_c_tabIndicatorColor="@color/colorPrimary"
		app:tab_c_tabTextSize="16sp"
		android:background="@color/bg"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		app:tab_c_indicator_corner="10dp"
		app:tab_c_tabIndicatorWidth="20dp"
		app:tab_c_tabIndicatorHeight="5dp"
		app:tab_c_indicator_style="line" />

	<androidx.viewpager.widget.ViewPager

		android:id="@+id/viewPager"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>

</LinearLayout>