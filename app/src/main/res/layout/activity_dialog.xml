<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent">


	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<Button
				android:id="@+id/dialog_btn1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginRight="30dp"
				android:layout_marginLeft="30dp"
				android:text="@string/dialog_sample_1"
				android:layout_marginTop="30dp"/>
			<Button
				android:id="@+id/dialog_btn2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginRight="30dp"
				android:layout_marginLeft="30dp"
				android:text="@string/dialog_sample_2"
				android:layout_marginTop="30dp"/>
			<Button
				android:id="@+id/dialog_btn3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginRight="30dp"
				android:layout_marginLeft="30dp"
				android:text="实例三：一个Button"
				android:layout_marginTop="30dp"/>
			<Button
				android:id="@+id/dialog_btn4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginRight="30dp"
				android:layout_marginLeft="30dp"
				android:text="@string/dialog_sample_4"
				android:layout_marginTop="30dp"/>
			<Button
				android:id="@+id/dialog_btn5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginRight="30dp"
				android:layout_marginLeft="30dp"
				android:text="实例五：底部弹框"
				android:layout_marginTop="30dp"/>

			<Button
				android:id="@+id/dialog_btn6"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginRight="30dp"
				android:layout_marginLeft="30dp"
				android:text="实例六：多个弹框"
				android:layout_marginTop="30dp"/>

		</LinearLayout>

	</androidx.core.widget.NestedScrollView>

</LinearLayout>